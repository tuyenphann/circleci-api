[Unit]
Description=Connecting PostgreSQL Client
Requires=networking.service
After=networking.service

[Service]
WorkingDirectory=/usr/local/bin
ExecStart=/usr/local/bin/cloud_sql_proxy -dir=/var/run/cloud-sql-proxy -instances=circle-ci-api-demo:us-central1:circleci-dev=tcp:5432
Restart=always
StandardOutput=journal
User=root

[Install]
WantedBy=multi-user.target